
.order_options {
	margin-bottom: 5px;
}

.loading_proposals {
	background-color: #FAFAFA;
	border-top: 1px solid #E3E3E3;
	display: block;
	padding: 10px 0;
	text-align: center;
	color: #3366CC;
	font-weight: bold;
	cursor: pointer;
}
.loading_proposals:hover {
	background-color: #F4F4F4;
	text-decoration: none;
}


.proposalComment {
	padding: 20px 0 0;
	clear: both;
}


.proposalCommentPostedAt {
	/*margin-bottom:16px;*/
}


.proposalNewComment {
	margin-top: 5px;
	clear: both;
}

.proposalNewCommentField {
	border:none;
	width: 100%;
	height: 130px;
	resize: none;
	background: none;
}


.proposal_title_index {
	overflow: hidden;
	border-bottom: 1px solid #D8D2C3;
}

.proposal_main {
	position: relative;
	border: 1px solid #808080;
	-webkit-border-radius: 3px;
	-moz-border-radius: 3px;
	border-radius: 3px;
	background: repeat scroll 0 0 #FFF;
	background: -webkit-gradient(linear, center top, center bottom, color-stop(30%, #FFFFFF), color-stop(70%, #DFEFFC));
	background: -moz-linear-gradient(center top , #FFFFFF 30%, #DFEFFC 70%) repeat scroll 0 0 transparent;
	margin-bottom: 5px;
}

.proposal_comment {
	position: relative;
	border: 1px solid #CCCCCC;
	-webkit-border-radius: 3px 3px 0px 0px;
	-moz-border-radius: 3px 3px 0px 0px;
	border-radius:  3px 3px 0px 0px;
	margin-left: 50px;
	color: #333333;
}

.show_all_comments {
	position: relative;
	background: none repeat scroll 0 0 rgba(0, 0, 0, 0.02);
	border-left: 1px solid #CCCCCC;
	border-right: 1px solid #CCCCCC;
	border-bottom: 1px solid #CCCCCC;
	-webkit-border-radius:  0px 0px 3px 3px;
	-moz-border-radius: 0px 0px 3px 3px;
	border-radius: 0px 0px 3px 3px;
	margin-left: 150px;
	padding: 5px;
	color: #333333;
}

.proposal_comment_reply {
	position: relative;
	background: none repeat scroll 0 0 rgba(0, 0, 0, 0.02);
	border-left: 1px solid #CCCCCC;
	border-right: 1px solid #CCCCCC;
	border-bottom: 1px solid #CCCCCC;
	-webkit-border-radius:  0px 0px 3px 3px;
	-moz-border-radius: 0px 0px 3px 3px;
	border-radius: 0px 0px 3px 3px;
	margin-left: 150px;
	color: #333333;
}

.proposal_comment_reply .reply_img {
	margin: 5px;
	float: left;
}

.proposal_comment_reply .reply_area {
	float: left;
	width: 450px;
}

.proposal_comment_reply .reply_area textarea {
	width: 100%;
	height: 32px;
}

.proposal_comment_reply .reply_button {
	bottom: 6px;
    position: absolute;
    right: 20px;
}

.proposal_comment_reply .reply_content {
	float:left;
	margin: 5px;
}


.proposal_comment_reply textarea {
	border: 1px solid #BDC7D8;
    margin: 5px;
    resize: none;
    width: 80%;
}

.proposal_list {
	position: relative;
